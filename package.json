  "bugs": {
    "url": "https://github.com/bngams/2508-devops/issues"
  },
  "homepage": "https://github.com/bngams/2508-devops#readme",
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-audit-html": "^1.5.0",
    "turbo": "^2.5.6"
  }
}
